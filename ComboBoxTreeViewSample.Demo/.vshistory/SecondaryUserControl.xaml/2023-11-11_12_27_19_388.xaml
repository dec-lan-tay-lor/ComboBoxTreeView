<UserControl x:Class="ComboBoxTreeView.Demo.SecondaryUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ComboBoxTreeView.Demo"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <FrameworkElement.Resources>
        <HierarchicalDataTemplate x:Key="treeViewDataTemplate" ItemsSource="{Binding Children}">
            <TextBlock Text="{Binding Title}" />
        </HierarchicalDataTemplate>
 
        <ResourceDictionary Source="/VortexWolf.Controls;component/Themes/ComboBoxTreeView.xaml"/>
    </FrameworkElement.Resources>
    
    <Grid>
        <ComboBox Style="{StaticResource ComboBoxTreeStyle}"
                            ItemsSource="{Binding Items}" 
                                SelectedItem="{Binding SelectedItem}" 
                                ItemTemplate="{StaticResource treeViewDataTemplate}" >
        </ComboBox>
    </Grid>
</UserControl>
